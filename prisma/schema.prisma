generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  name      String
  email     String
  password  String
  roleId    Int
  banned    Boolean
  avatarUrl String

  @@map("users")
}

model Role {
  id          Int      @id @default(autoincrement())
  roleName    String
  permissions String[]

  @@map("roles")
}

model News {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  content     String

  @@map("news")
}
